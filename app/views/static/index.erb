<form action = '/urls' method = "post">
  Enter URL:
  <input type = 'text' name = 'long_url'>
  <input type = 'submit' value = 'Submit'>
</form>

<table style="width:100%">
  <!-- <table border="5"> -->
    <!-- <table cellpadding="5"> -->
  <tr>
    <th class="b5">ID</th>
    <th class="b5"><p align="left">Long url</th>
    <th class="b5"><p align="left">Short url</th>
    <th class="b5"><p align="left">Click_counter</th>
  </tr>

<% @urls.each do |url|%>
  <tr>
    <th class="b5"><p align="left"><%= url.id%></th>
    <th class="b5"><p align="left"><%= url.long_url%></th>
    <th class="b5"><p align="left"><a href = <%= url.long_url%> ><%= url.short_url%></a></th>
    <th class="b5"><p align="left"><%= url.click_counter%></th>
  </tr>
<% end%>

</table>




